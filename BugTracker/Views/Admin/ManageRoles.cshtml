@model IEnumerable<BugTracker.Models.ManageRolesViewModel>


<div class="container">
    <div class="row">

        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">


                    <h3 class="card-title">Users Availba</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-12">
                                @Html.ListBox("UsersIds", null, new { style = "font-size: 1.5rem;width: 268px;height:221px" })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                @Html.DropDownList("Role", null, "-- Select Role --", new { style = "font-size: 1.5rem;" })
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <button type="submit" id="assignRole" disabled class="btn btn-primary">Assign To Role</button>
                            </div>
                        </div>

                    }

                </div>
                <!-- /.card-body -->

                <div class="card-footer">

                </div>

            </div>




        </div>
        <div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
            <div class="toast" style="position: absolute; top: 0; right: 0;">
                <div class="toast-header">
                    <img src="..." class="rounded mr-2" alt="...">
                    <strong class="mr-auto">Bootstrap</strong>
                    <small>11 mins ago</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    Hello, world! This is a toast message.
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">


                    <h3 class="card-title">Assign Roles To Users</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">

                    <table class="table table-bordered table-hover table-striped">
                        <tr>
                            <th>@Html.DisplayName("User Name")</th>
                            <th>@Html.DisplayName("Role")</th>
                        </tr>

                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => user.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => user.RoleName)
                                </td>
                            </tr>

                        }

                    </table>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">

                </div>

            </div>

        </div>
    </div>
</div>
<button type="button"
        class="btn btn-primary"
        id="myBtn">
    Show Toast
</button>
@section scripts    {
    <script>

        $('#Role').change(function () {
            selectVal = $('#Role').val();

            if (selectVal == 0) {
                $('#assignRole').prop("disabled", true);
            }
            else {
                $('#assignRole').prop("disabled", false);
            }
        });


       
            $("#myBtn").click(function () {
                $('.toast').toast('show');
            });
        



    </script>

}


