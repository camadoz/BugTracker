@model IEnumerable<BugTracker.Models.ManageRolesViewModel>

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark" style="font-weight:bolder; font-size:3.0rem;">Assign Roles Section</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">

                    <li class="breadcrumb-item active"></li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->

<div class="container">
    <div class="row">

        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">

                    
                    <h3 class="card-title">Users </h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-12 mb-3">

                            <img src="~/Images/icons8-number-1-48.png" /> <span style="font-size:1.6rem; font-weight:bold;"> Select  users for the role</span>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-12">
                                @Html.ListBox("UsersIds", null, new { style = "font-size: 1.5rem;width: 268px;height:221px" })
                            </div>
                        </div>
                        <div class="row mt-4">
                            <div class="col-md-12">

                                <img src="~/Images/icons8-number-2-48.png" /><span style="font-size:1.6rem; font-weight:bold;"> Select a role for the users selected above</span>
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-md-12">
                                @Html.DropDownList("Role", null, "-- Select A Role --", new { style = "font-size: 1.8rem;" })
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12">
                                <button type="submit" id="assignRole" disabled class="btn btn-primary">Assign To Role</button>
                            </div>
                        </div>

                    }

                </div>
                <!-- /.card-body -->
                
                <div class="card-footer">

                </div>

            </div>
        </div>
        <div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
            <div class="toast" style="position: absolute; top: 0; right: 0;">
                <div class="toast-header">
                    <img src="..." class="rounded mr-2" alt="...">
                    <strong class="mr-auto">Bootstrap</strong>
                    <small>11 mins ago</small>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    Hello, world! This is a toast message.
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">


                    <h3 class="card-title">Assign Roles To Users</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">

                    <table class="table table-bordered table-hover table-striped">
                        <tr>
                            <th>@Html.DisplayName("User Name")</th>
                            <th>Email</th>
                            <th>@Html.DisplayName("Role")</th>
                        </tr>

                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => user.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => user.email)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => user.RoleName)
                                </td>
                            </tr>

                        }

                    </table>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">

                </div>

            </div>

        </div>
    </div>
</div>
<button type="button"
        class="btn btn-primary"
        id="myBtn">
    Show Toast
</button>
@section scripts    {
    <script>

        $('#Role').change(function () {
            selectVal = $('#Role').val();

            if (selectVal == 0) {
                $('#assignRole').prop("disabled", true);
            }
            else {
                $('#assignRole').prop("disabled", false);
            }
        });



        $("#myBtn").click(function () {
            $('.toast').toast('show');
        });




    </script>

}


